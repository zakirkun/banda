{
  "name": "banda",
  "version": "0.1.0",
  "description": "A lightweight, elegant TypeScript UI framework",
  "module": "src/index.ts",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "dev": "bun run src/demo/server.ts",
    "build": "bun build src/index.ts --outdir ./dist --minify",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": [
    "ui",
    "framework",
    "typescript",
    "components",
    "frontend"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./styles/*": "./src/styles/*",
    "./components/*": "./src/components/*"
  },
  "files": [
    "src",
    "dist"
  ]
}